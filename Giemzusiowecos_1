package me.seba1549.main;

import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) {
		String n;
		int nl, min, max;
		double srednia = 0, suma = 0;
		
		n = JOptionPane.showInputDialog("Podaj długość ciągu: ");
		nl = Integer.parseInt(n);
		
		for(int i = nl; i >= 0 ; i--){
			suma +=  i;
		}
		
		srednia = suma/(nl+1);
		
		min = 0;
		max = nl;
		
		JOptionPane.showMessageDialog(null, "Suma = " + suma + " | średnia = " + srednia + " | min = " + min + " | max = " + max, "Wynik" , JOptionPane.INFORMATION_MESSAGE);
	
	}
}
