package me.seba1549.main;

import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) {
		String n, podana;
		int nl, wynik = 0, podanaL = 0;
		
		n = JOptionPane.showInputDialog("Podaj liość wyrazów w ciągu: (Tylko liczby całkowite)");
		nl = Integer.parseInt(n);
		
		do{
			podana = JOptionPane.showInputDialog("Podaj jakaś liczbę: " + " " + nl);
			podanaL =  Integer.parseInt(podana);
			
			if(podanaL > 0){
				wynik++;
			}
			else{
				wynik = 0;
			}
			
			nl--;	
		}while(nl > 0);
		
		JOptionPane.showMessageDialog(null, "Najdłuzszy ciąg liczb dodatnich wynosi: " + wynik);
	}

}
